{% extends "layout.twig" %}

{% block css %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/logbox.css">
    <link rel="stylesheet" href="/css/workspace.css">
{% endblock %}

{% block body %}
    <div class="landing-page-body">
        <div class="main col s12 row">
            <div class="carousel carousel-slider center" data-indicators="true">
                <div class="carousel-fixed-item center">
                    <a class="btn waves-effect request-carousel-btn" href="#requestAccess">Request an Account</a>
                </div>
                <div class="carousel-item white-text col s9" href="#">
                    <h1>Working together on 3D projects has never been easier</h1>
                </div>
                <div class="carousel-item white-text col s9" href="#">
                    <h1>A new way to design 3D as a team</h1>
                </div>
                <div class="carousel-item white-text col s9" href="#">
                    <h1>Kneel down frontiers between 3D CAD software</h1>
                </div>
            </div>
        </div>
        <div class="info1 row">
            <div class="col s12 m12 l6 xl6" >
                <h4>Why use our platform ?</h4>
                <p>
                    <h5>Compatibility</h5>
                    No more headaches between files types, we accept all ! Stay focus on your projects !
                </p>
                <p>
                    <h5>Freedom</h5>
                Free your team from using the same CAD software, let them chose !
                <br>Free them from none efficient meeting.
                <br>Share the same workspace and keep an eye on projects... all together !
                </p>
                <p>
                    <h5>Efficiency</h5>
                A faster and better way to work by having everything in one place. Use a flexible and versatile environment.
                </p>
            </div>
            <div class="col s6 hide-on-med-and-down"><img src="img/info1-img.png" /></div>
        </div>
        <div class="info2 row">
            <div class="col s6 hide-on-med-and-down"><img  src="img/info2-img.png"/></div>
            <div class="col s12 m12 l6 xl6">
                <h4>How can we help you ?</h4>
                <p>
                <h5>Unite</h5>
                We are here to help you reunite your team around your project.<br/>
                Team and projects are in one place !
                </p>
                <p>
                <h5>Collaborate</h5>
                No more emails or meetings, communicate directly with your teammates through the platform and follow the evolution of everyone’s works !
                </p>
                <p>
                <h5>Assemble</h5>
                Smoothly assemble your project online without having any compatibility problems !
                </p>
            </div>
        </div>
        <div class="prices row">
            <div class="prices-header">
                <h4>What about the costs ?</h4>
                <p>3 different packs for different uses and needs ! Please contact us for the prices or furthermore questions.</p>
            </div>
            <div class="card-container col s12 m12 l8 xl8 center-align">
                <div class="card l8 xl8 z-depth-4 center-align">
                    <div class="card-header">
                        <span class="card-title">Starter</span>
                        <p class="prices-description">Get started and discover new possibilities</p>
                        <h5>39,95 €</h5>
                    </div>
                    <div class="card-content">
                        <ul>
                            <li><i class="material-icons">check</i><div class="center">Manage 3D open formats</div></li>
                            <li><i class="material-icons">check</i><div class="center">Textual annotations</div></li>
                            <li><i class="material-icons">check</i><div class="center">Measuring tool</div></li>
                            <li><i class="material-icons">check</i><div class="center">Live chat and groups</div></li>
                            <li><i class="material-icons">check</i><div class="center">Project news feed</div></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id="requestAccess" class="request-access row">
            <div class="request-access-header">
                <h4>Account Request</h4>
                <p>Want to participate in our journey and help us improve it ? Contact us to create your account ! </p>
            </div>
            <form class="access-inputs col s12">
                <div class="row">
                    <div class="input-field col s6 m3 l2">
                        <input id="nameAccess" name="name" type="text" class="validate" required>
                        <label for="nameAccess">Name</label>
                    </div>
                    <div class="input-field col s6 m3 l2">
                        <input id="surnameAccess" name="surname" type="text" class="validate" required>
                        <label for="surnameAccess">Surname</label>
                    </div>
                    <div class="input-field col s6 m3 l2">
                        <input id="email_beta" name="email" type="email" class="validate" required>
                        <label for="email_beta">Email</label>
                    </div>
                    <div class="col s12 m3 l2">
                        <a id="beta_button" class="btn waves-effect center">Send Request</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="info-footer row">
            <div class="link-buttons ">
                <a href="/" class="link-logo col s6 m6 l6 xl6 hide-on-med-and-down" ><img src="/img/logo.png"></a>
                <div class="col s12 m12 l6 xl6">
                    <a href="https://www.facebook.com/bocketme/" class="link-icons" ><img src="/img/facebook-icon-dark.png"></a>
                    <a href="https://www.linkedin.com/company/bocket/?originalSubdomain=fr" class="link-icons" ><img  src="/img/linkedin-icon-dark.png"></a>
                    <a href="https://twitter.com/hellobocket" class="link-icons " ><img src="/img/twitter-icon-dark.png"></a>
                </div>
            </div>
            <div class="legal-links col s12">
                <span>Legal Notice</span>
                <span>Terms of Service</span>
                <span>© Bocket.me - 2017 DEM-4382871//DEM-4382874</span>
            </div>
        </div>
    </div>
    <div id="blur"></div>
    {% include 'forgetPassword.twig' %}
    {% include "signupAccountBox.twig" %}
    {% include "signupWorkspace.twig" %}
    {% include "signinAccountBox.twig" %}
    {% include "workplacesPickerBox.twig" %}
    {% include "createWorkspace.twig" %}
    {% include "changePassword.twig" %}
{% endblock %}

{% block js %}

    {% if invitation %}
        <script type="application/javascript">
            var invitationUid = "{{ invitationUid }}";
            console.log('me');
        </script>
    {% endif %}
    <script type="application/javascript" src="/js/betaRegistration.js"></script>
    <script type="application/javascript" src="/js/checkEmail.js"></script>
    <script type="application/javascript" src="/js/logbox.js"></script>
    <script type="application/javascript" src="/js/signup.js"></script>
    <script type="application/javascript" src="/js/signin.js"></script>
    <script type="application/javascript" src="/js/resetPassword.js"></script>
    <script type="application/javascript">
        $(document).ready(function() {
            $('#nameAccess').val('');
            $('#surnameAccess').val('');
            $('#email_beta').val('');
            $('#choiceAccess').val('');
            $('.carousel.carousel-slider').carousel({fullWidth: true});
            $('select').material_select();
            $('.carousel-item').on('click', () => {
                $('.carousel').carousel('next');
            });
        });
    </script>
    {% if not invitation %}
        <script type="application/javascript" src="/js/signInEvents.js"></script>
    {% else %}
        <script type="application/javascript" src="/js/signInInvitationEvents.js"></script>
        <script type="application/javascript">
            $(document).ready(function () {
                $("#signUp").click();
                $(".email-inv").val('{{ email }}');
                $("#workspaceName").val("{{ workspaceName }}").attr("type", "hidden"); //prop('disabled', true).parent().css("display", "none");
                $("#completeName").val("{{ completeName }}");
                $("h1#new-workspace").text("Give us some information");
                $("#hiddenInvitation").val(invitationUid);
            });
        </script>
    {% endif %}
{% endblock %}
