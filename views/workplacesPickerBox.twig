<div id="workspacesPickerBox" class="container containerBox">
    <div class="col-md-6">
        <i id="bigger-close" class="material-icons closeBox">close</i>
        <div id="bigger-logbox" class="logbox row">
            <form id="workspacesPicker" method="post" action="/workspace" novalidate="novalidate">
                <h1 class="titleBox">Connect to your workspace</h1>
                <div class="row">
                    <div class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="text" id="autocomplete-input" class="autocomplete">
                                <label for="autocomplete-input">Find your workspace</label>
                            </div>
                        </div>
                    </div>
                </div>
                <ul id="workspacesList" class="collection noborder" style="height: 300px; overflow: auto">
                </ul>
                <input type="hidden" id="emailWorkspace" name="email">
                <input type="hidden" id="passwordlWorkspace" name="password">
                <input type="hidden" id="chosenWorkspace" name="workspaceId">
                {% if invitation %}
                    <input type="hidden" id="invitationUidWorkspacePicker" name="invitationUid">
                {% endif %}
                <button id="signIn-btn-picker" class="btn waves-effect waves-light submit-btn" type="submit">Continue
                </button>
            </form>
        </div>
    </div>
</div>
